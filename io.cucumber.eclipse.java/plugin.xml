<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="io.cucumber.eclipse.java.steps.cucumber"
         name="Cucumber Runtime"
         point="io.cucumber.eclipse.editor.steps.integration">
      <stepDefinitionIntegration
            class="io.cucumber.eclipse.java.steps.CucumberStepDefinitionProvider">
      </stepDefinitionIntegration>
   </extension>
       <extension point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
         markerType="cucumber.eclipse.marker.gherkin.unmatched_step"
         class="io.cucumber.eclipse.java.quickfix.StepCreationMarkerResolutionGenerator"/>
   </extension>
	 <extension
	       point="org.eclipse.core.filebuffers.documentSetup">
	    <participant
	          class="io.cucumber.eclipse.java.validation.JavaGlueValidator"
	          contentTypeId="io.cucumber.eclipse.editor.content-type.feature">
	    </participant>
	 </extension>
	 <extension
	       point="org.eclipse.ui.workbench.texteditor.codeMiningProviders">
	    <codeMiningProvider
	          class="io.cucumber.eclipse.java.codemining.JavaReferencesCodeMiningProvider"
	          id="io.cucumber.eclipse.java.codeMiningProvider1">
	    </codeMiningProvider>
	 </extension>
	 <extension point = "org.eclipse.debug.core.launchConfigurationTypes">
	   <launchConfigurationType
          delegate="io.cucumber.eclipse.java.launching.CucumberFeatureLocalApplicationLaunchConfigurationDelegate"
          id="cucumber.eclipse.java.launching.localCucumberFeature"
          modes="run,debug,profile"
          name="Cucumber-JVM"
          public="true"
          sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
	   </launchConfigurationType>
	</extension>
	<extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
	    <launchConfigurationTypeImage
	        icon="icons/cukes.gif"
	        configTypeID="cucumber.eclipse.java.launching.localCucumberFeature"
	        id="cucumber.eclipse.launching.launchConfigurationTypeImage.localCucumberFeature">
	    </launchConfigurationTypeImage>
	</extension>
	<extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
    <launchConfigurationTabGroup
        type="cucumber.eclipse.java.launching.localCucumberFeature"
        class="io.cucumber.eclipse.java.launching.CucumberFeatureTabGroup"
        id="cucumber.eclipse.launching.launchConfigurationTabGroup.localCucumberFeature">
    </launchConfigurationTabGroup>
</extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          category="cucumber.eclipse.editor.preferences.main"
          class="io.cucumber.eclipse.java.preferences.CucumberJavaPreferencesPage"
          id="io.cucumber.eclipse.java.page1"
          name="Java">
    </page>
 </extension>
    <extension
         point="org.eclipse.ui.propertyPages">
      <page
            category="cucumber.eclipse.editor.properties.main"
            class="io.cucumber.eclipse.java.properties.JavaBackendPropertyPage"
            id="cucumber.eclipse.backends.java.properties.samplePropertyPage"
            name="Java Backend">
      </page>
   </extension>
  
   <!-- Cucumber Feature Builder -->
   <extension
         id="cucumberFeatureBuilder"
         name="Cucumber Feature Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="false">
         <run
               class="io.cucumber.eclipse.java.builder.CucumberFeatureBuilder">
         </run>
      </builder>
   </extension>
   
   <!-- Commands for adding/removing the builder -->
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="io.cucumber.eclipse.editor.category"
            id="io.cucumber.eclipse.java.builder.addBuilder"
            name="Enable Cucumber Builder">
      </command>
      <command
            categoryId="io.cucumber.eclipse.editor.category"
            id="io.cucumber.eclipse.java.builder.removeBuilder"
            name="Disable Cucumber Builder">
      </command>
   </extension>
   
   <!-- Handlers for the commands -->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="io.cucumber.eclipse.java.builder.AddCucumberBuilderHandler"
            commandId="io.cucumber.eclipse.java.builder.addBuilder">
      </handler>
      <handler
            class="io.cucumber.eclipse.java.builder.RemoveCucumberBuilderHandler"
            commandId="io.cucumber.eclipse.java.builder.removeBuilder">
      </handler>
   </extension>
   
   <!-- Property tester for builder presence -->
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="io.cucumber.eclipse.java.builder.CucumberBuilderPropertyTester"
            id="io.cucumber.eclipse.java.builder.propertyTester"
            namespace="io.cucumber.eclipse.java.builder"
            properties="hasCucumberBuilder"
            type="org.eclipse.core.resources.IProject">
      </propertyTester>
   </extension>
   
   <!-- Menu contributions under Project > Configure -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="io.cucumber.eclipse.java.builder.addBuilder"
               label="Enable Cucumber Builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="io.cucumber.eclipse.java.builder.hasCucumberBuilder"
                                 forcePluginActivation="true">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="io.cucumber.eclipse.java.builder.removeBuilder"
               label="Disable Cucumber Builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="io.cucumber.eclipse.java.builder.hasCucumberBuilder"
                              forcePluginActivation="true">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
